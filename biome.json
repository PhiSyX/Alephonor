{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignoreUnknown": true
    },
    "linter": {
        "enabled": true,
        "ignore": [
            ".vscode",
            "dist",
            "target",
            "public"
        ],
        "rules": {
            "recommended": true,
            "a11y": {
                "all": true
            },
            "complexity": {
                "recommended": true,
                "useLiteralKeys": "off",
                "useOptionalChain": "off"
            },
            "correctness": {
                "recommended": true
            },
            "nursery": {
                "recommended": true
            },
            "performance": {
                "recommended": true
            },
            "security": {
                "recommended": true
            },
            "style": {
                "recommended": true,
                "useConst": "off",
                "useShorthandFunctionType": "off"
            },
            "suspicious": {
                "recommended": true,
                "noEmptyInterface": "off",
                "useGetterReturn": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "ignore": [
            ".vscode",
            "dist",
            "target",
            "public"
        ],
        "useEditorconfig": true,
        "lineWidth": 80
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "lineWidth": 80,
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all"
        },
        "assists": {
            "enabled": true
        },
        "linter": {
            "enabled": true
        }
    },
    "css": {
        "formatter": {
            "enabled": true,
            "quoteStyle": "double"
        },
        "assists": {
            "enabled": true
        },
        "linter": {
            "enabled": true
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "trailingCommas": "none"
        },
        "linter": {
            "enabled": true
        },
        "assists": {
            "enabled": true
        }
    }
}